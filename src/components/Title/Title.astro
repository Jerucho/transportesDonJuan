---
const { title, barColor, textColor } = Astro.props;
import "../../styles/fadeInAnimation.css";
---

<div class="flex items-start p-2.5 md:p-3.5 fadeIn px-4 md:px-6 lg:px-8 w-full">
  <div
    class=`${!barColor ? 'bg-azul' : barColor} mr-2.5 self-stretch`
    style={{
      width: "7px",
    }}
  >
  </div>
  <h2
    style={{ margin: 0, lineHeight: 1.3 }}
    class=`font-bold text-2xl md:text-3xl lg:text-3xl ${!textColor ? 'text-[#000]' : textColor}`
  >
    {title}
  </h2>
</div>
