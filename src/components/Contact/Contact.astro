---
import ButtonAction from "../Button/ButtonAction.astro";
import Title from "../Title/Title.astro";
---

<section class="bg-azul py-12 md:py-20">
  <Title title="Contactanos" barColor="bg-blanco" textColor="text-blanco" />
  <div class="flex flex-col md:flex-row justify-between gap-10">
    <!-- Contact Section -->
    <div class="w-full md:w-2/4 px-4 md:px-0 md:mx-[5%] flex flex-col gap-8">
      <div class="flex flex-col gap-5 mt-8">
        <!-- Phone Number -->
        <h3 class="text-xl md:text-3xl text-blanco flex items-center gap-2">
          <i class="fa-solid fa-phone"></i> +54 9 11 3049 1482
        </h3>
        <!-- Email Address -->
        <h3 class="text-xl md:text-3xl text-blanco flex items-center gap-2">
          <i class="fa-solid fa-envelope"></i> contacto@transportesdonjuan.com
        </h3>
        <!-- WhatsApp Button -->
        <ButtonAction
          icon="fa-brands fa-whatsapp"
          text="WhatsApp"
          href="https://www.google.com"
        />
      </div>
    </div>

    <!-- Map Section -->
    <div class="w-full md:w-2/4 flex justify-center px-4 md:px-0">
      <iframe
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3284.01671357811!2d-58.384150687672!3d-34.60373887284138!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x4aa9f0a6da5edb%3A0x11bead4e234e558b!2sObelisco!5e0!3m2!1ses!2spe!4v1732659465517!5m2!1ses!2spe"
        width="100%"
        height="100%"
        loading="lazy"
        referrerpolicy="no-referrer-when-downgrade"
        class="rounded-lg shadow-lg"
      >
      </iframe>
    </div>
  </div>
</section>
