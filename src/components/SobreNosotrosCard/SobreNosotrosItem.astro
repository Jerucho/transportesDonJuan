---
const { icon, title, text } = Astro.props;
---

<div
  class="h-[20%] w-full p-[20px] flex flex-col gap-[20px] border border-[#eeeeee] rounded mb-[30px] md:w-[40%] md:h-[300px] md:justify-center"
>
  <i class=`${icon} text-5xl text-azulClaro`></i>
  <h3 class="text-3xl font-bold">{title}</h3>
  <p class="text-[gray]">
    {text}
  </p>
</div>
