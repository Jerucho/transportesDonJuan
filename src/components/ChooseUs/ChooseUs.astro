---
import "../../styles/fadeInAnimation.css";
---

<section class="flex h-[70vh] mx-[100px] mt-[150px] fadeIn">
  <!-- Sección de la imagen -->
  <div class="w-[50%] h-full">
    <div
      class="w-full h-full rounded-md"
      style="
        background-image: url('/src/assets/operario.webp');
        background-size: cover;
        background-position: center;
      "
    >
    </div>
  </div>

  <!-- Sección del texto -->
  <div class="w-[50%] h-full flex flex-col justify-center px-11">
    <h2 class="text-5xl font-black text-azul mb-6">¿Por Qué Elegirnos?</h2>
    <div class="w-full h-full flex flex-col justify-around">
      <!-- Primera Tarjeta -->
      <div class="shadow-md flex gap-5 items-center p-8 rounded bg-white">
        <div
          class="shadow-xl rounded-full bg-verde h-20 w-20 text-center flex justify-center items-center text-xl text-blanco font-bold"
        >
          +76%
        </div>
        <h3 class="text-xl">Reducción en Tiempos de Entrega</h3>
      </div>

      <!-- Segunda Tarjeta -->
      <div class="shadow-md flex gap-5 items-center p-8 rounded bg-white">
        <div
          class="shadow-xl rounded-full bg-verde h-20 w-20 text-center flex justify-center items-center text-xl text-blanco font-bold"
        >
          +64%
        </div>
        <h3 class="text-xl">Disminución de Costos Operativos</h3>
      </div>

      <!-- Tercera Tarjeta -->
      <div class="shadow-md flex gap-5 items-center p-8 rounded bg-white">
        <div
          class="shadow-xl rounded-full bg-verde h-20 w-20 text-center flex justify-center items-center text-xl text-blanco font-bold"
        >
          +80%
        </div>
        <h3 class="text-xl">Reducción de Problemas en la Carga</h3>
      </div>
    </div>
  </div>
</section>
