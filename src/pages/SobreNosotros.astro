---
import { Banner } from "../components/banner/Banner";
import Navbar from "../components/navbar/navbar.astro";
import WebLayout from "../layouts/WebLayout.astro";
import banner from "../assets/Rectangle 52.png";
import { SolicitarCotizacion } from "../components/solicitar-cotizacion/SolicitarCotizacion";
import SobreNosotrosCard from "../components/SobreNosotrosCard/SobreNosotrosCard.astro";
import Title from "../components/Title/Title.astro";
import NuestraHistoria from "../components/NuestraHistoria/NuestraHistoria.astro";
import Footer from "../components/Footer/Footer.astro";
import WhatsAppBtn from "../components/WhatsAppBtn/WhatsAppBtn.astro";
---

<WebLayout
  title="Sobre Nosotros | Transportes Don Juan - Empresa de Transporte de Cargas en Argentina"
  description="Conocé la historia y valores de Transportes Don Juan. Empresa familiar con años de experiencia en transporte de cargas en Argentina. Comprometidos con la seguridad, puntualidad y excelencia en logística."
  keywords="sobre nosotros Transportes Don Juan, empresa transporte cargas Argentina, historia empresa logística, valores empresa transporte, misión visión transporte"
>
  <Navbar color="black" />
  <Banner background_position="object-center" background_image={banner.src}>
    <div class="flex flex-col items-end justify-center h-full px-6 md:px-12 lg:px-20 xl:px-24">
      <div class="max-w-2xl text-right">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-blanco leading-tight drop-shadow-2xl mb-4">
          Sobre Nosotros
        </h1>
        <p class="text-blanco/90 text-lg md:text-xl lg:text-2xl font-light leading-relaxed">
          Comprometidos con la excelencia en transporte de cargas en Argentina
        </p>
      </div>
    </div>
  </Banner>
  <SolicitarCotizacion />
  <SobreNosotrosCard />
  <NuestraHistoria />
  <Footer />
  <WhatsAppBtn />
</WebLayout>
